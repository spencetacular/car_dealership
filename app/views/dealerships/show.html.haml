%h1.blue-text= @dealership.name
%h3.blue-text Cars
%hr
	.row
		- @cars.each do |car|
			.col.s12.m2
				.card.blue-grey.darken-1
					.card-content.white-text
						%span.card-title
							= car.make
							= car.model
						%p
							= "color: #{car.color}"
							= "$#{car.price}"
							= "Sold: #{car.sold}"
	%h3.blue-text Customers
	%hr
		.row
			- @customers.each do |customer|
				.col.s12.m2
					.card.blue.darken-1
						.card-content.white-text
							%span.card-title
								= customer.first_name
								= customer.last_name
							%p
								=customer.phone_number
								=customer.email
								


			
							



